---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
}

// Helper functions to trim meta content
function trimDescription(text: string) {
	return text.length > 160 ? text.slice(0, 157) + '...' : text;
}

function trimTitle(text: string) {
	return text.length > 60 ? text.slice(0, 57) + '...' : text;
}

const { 
	title,
	description = "Convert between PNG and BMP formats with our free online tools. Our free online converter makes it easy to switch between PNG and BMP formats."
} = Astro.props;

const trimmedTitle = trimTitle(title);
const trimmedDescription = trimDescription(description);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{trimmedTitle}</title>

		<!-- Primary Meta Tags -->
		<meta name="description" content={trimmedDescription} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={trimmedTitle} />
		<meta property="og:description" content={trimmedDescription} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:title" content={trimmedTitle} />
		<meta property="twitter:description" content={trimmedDescription} />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		min-height: 100vh;
	}
	body {
		margin: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>