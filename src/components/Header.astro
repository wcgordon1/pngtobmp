<header class="site-header">
  <div class="header-content">
    <a href="/" class="logo">
      <img src="/logo.png" alt="PNG to BMP Converter" />
      <span>PNG to BMP</span>
    </a>
    <nav class="main-nav">
      <a href="/blog" class="nav-link">Blog</a>
    </nav>
  </div>
</header>

<style>
  .site-header {
    background: #1a1a1a;
    padding: 1.5rem 1rem;
    border-bottom: 1px solid #333;
  }

  .header-content {
    width: 1200px;
    max-width: calc(100% - 2rem);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: rgb(var(--accent-light));
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: bold;
    transition: color 0.3s ease;
  }

  .logo:hover {
    color: white;
  }

  .logo img {
    height: 32px;
    width: auto;
  }

  .logo span {
    margin-left: 0.25rem;
  }

  .nav-link {
    color: rgb(var(--accent-light));
    text-decoration: none;
    font-size: 1.1rem;
    transition: color 0.2s ease;
    padding: 0.5rem 1rem;
    border-radius: 4px;
  }

  .nav-link:hover {
    color: white;
    background: rgba(var(--accent-light), 0.1);
  }

  @media (max-width: 768px) {
    .header-content {
      padding: 0;
    }
  }
</style> 